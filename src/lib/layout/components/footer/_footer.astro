---
import { APP_NAME, AUTHOR_NAME, AUTHOR_URL } from 'astro:env/server';

import VercelIcon from '$lib/icons/vercel-icon.svelte';

import TechStacks from './tech-stacks.svelte';
---

<footer transition:persist>
  <p>
    <em>Powered by</em>
    <a
      class='btn btn-text btn-primary'
      href='https://vercel.com/'
      target='_blank'
      rel='noopener noreferer'
    >
      <VercelIcon />
      <span class='visually-hidden'>Vercel</span>
    </a>
  </p>

  <p>
    <strong>{APP_NAME}</strong>
    dibuat oleh
    <a
      class='btn btn-text btn-primary'
      href={AUTHOR_URL}
      target='_blank'
    >
      {AUTHOR_NAME}
    </a>
    menggunakan
    <TechStacks />
  </p>
</footer>

<style lang='scss'>
  footer {
    display: flex;
    flex-direction: column;
    gap: 8px;
    align-items: center;
    justify-content: flex-end;
    width: 100%;
    height: 160px;
    padding: 12px;

    :global(a) {
      height: 24px;
    }
  }

  p {
    display: flex;
    flex-wrap: wrap;
    gap: 4px;
    line-height: 32px;

    :global(span) {
      display: inline-flex;
    }

    &,
    :global(span) {
      align-items: center;
      justify-content: center;
      text-align: center;
    }
  }
</style>
