---
import Footer from './components/footer.astro';
import SwitchModeButton from './components/switch-mode-button.astro';

export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header>
  <SwitchModeButton />
  <slot name='header' />
</header>

<main class={className}>
  <slot />
</main>

<Footer />

<style lang='scss'>
  header {
    position: sticky;
    top: 0;
    z-index: 40;
    display: flex;
    gap: 8px;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 80px;
    padding: 12px 16px;

    @apply shadow-lg bg-neutral-bright;
  }

  main {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding: 0 12px;
  }

  @include dark {
    header {
      @apply shadow-2xl bg-neutral-dim;
    }
  }
</style>
